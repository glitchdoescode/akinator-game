# LLM Provider: "gemini" or "openai" (default: gemini)
LLM_PROVIDER=gemini

# Google AI Studio API Key (required if using Gemini)
# Get your API key from https://aistudio.google.com/app/apikey
GOOGLE_API_KEY=your_google_api_key_here

# OpenAI API Key (required if using OpenAI)
# Get your API key from https://platform.openai.com/api-keys
OPENAI_API_KEY=your_openai_api_key_here

# OpenAI Model (optional, default: gpt-4o-mini)
# Options: gpt-4o, gpt-4o-mini, gpt-4-turbo, gpt-3.5-turbo
OPENAI_MODEL=gpt-4o-mini

# Tavily API Key (required for web search)
# Get your API key from https://tavily.com
TAVILY_API_KEY=your_tavily_api_key_here

# Maximum number of guesses allowed (default: 20)
MAX_GUESSES=20
